<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout style="@style/action_bar">
        <ImageView style="@style/action_bar_action" android:src="@drawable/actionbar_home"  />
        <View style="@style/action_bar_separator" />
        <TextView style="@style/action_bar_title" android:text="@string/add_painting" />
    </LinearLayout>
    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/painting_name"
        />
    <ToggleButton
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textOff="@string/start_painting"
        android:textOn="@string/stop_painting"
        android:padding="10dip"
        android:gravity="center"
        android:textSize="35dip"
        android:background="@color/just_black"
        android:textColor="@color/just_white"
        android:onClick="startPaint"
        />
</LinearLayout>
