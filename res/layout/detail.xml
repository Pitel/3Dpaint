<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout style="@style/action_bar">
        <ImageView style="@style/action_bar_action" android:src="@drawable/actionbar_home"  />
        <View style="@style/action_bar_separator" />
        <TextView style="@style/action_bar_title" />
        <View style="@style/action_bar_separator" />
        <ImageView style="@style/action_bar_action" android:src="@drawable/actionbar_add" android:onClick="goAdd"  />
    </LinearLayout>
    <cz.vutbr.fit.tam.paint3d.TouchGLSurfaceView
        android:id="@+id/touch"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
</LinearLayout>
